{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "api/**/*",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "esModuleInterop": true,
      "allowJs": true
    },
    "files": true
  }
}

